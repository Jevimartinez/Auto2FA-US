{
  "manifest_version": 2,
  "name": "Auto2FA-US",
  "version": "2.0.0",
  "description": "Extensión que autocompleta el segundo factor de autenticación en la página de login de la US.",
  "author": "Jevimartinez",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Auto2FA-US"
  },
  "background": {
    "scripts": ["background.js", "lib/browser-polyfill.min.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["*://sso.us.es/*"],
      "js": [
        "contentScript.js",
        "lib/otplib.buffer.min.js",
        "lib/otplib.index.min.js"
      ]
    }
  ]
}
